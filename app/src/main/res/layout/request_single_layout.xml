<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:padding="3dp">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_single_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/request_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/request_single_image"
        android:layout_marginLeft="7dp"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/request_single_name"
        android:text=" sent you request."
        android:textSize="19dp" />



   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="#e0e0e0"
       android:layout_below="@+id/request_single_name"
       android:layout_toRightOf="@+id/request_single_image"
       android:layout_marginLeft="7dp"
       android:layout_marginTop="17dp"
       android:layout_marginRight="5dp"
       />

    </RelativeLayout>






